.header_shop_name{
    font-size: 40px;
    font-family: 'Economica', sans-serif;
    color: black;
}

.main_background_image{
    width: 100%;
    min-height: 700px;
    height: auto;
    background-image: url("<%= asset_path('cookboard2.jpg') %>");
    background-size: cover;
    background-position: center;
    position: relative;
}

.top_phote{
    width: 100%;
    height: 900px;
    background-image: url("<%= asset_path('board.jpg') %>");
    background-size: cover;
    background-position: center;
    position: relative;
    background-color: white;
}

.top_text{
	text-align: center;
	font-size: 120px;
	color: #CC9966	;
    font-family: 'Economica', sans-serif;
}

.top_comment{
	text-align: center;
	font-size: 30px;
	font-family: Hannari;
}

.instruction{
	text-align: center;
	font-size: 70px;
	position: absolute;
	bottom: 15%;
	left: 45%;
    font-family: 'Economica', sans-serif;
}

.about_phote{
    width: 100%;
    height: 900px;
    background-image: url("<%= asset_path('cook.jpg') %>");
    background-size: cover;
    background-position: center;
    position: relative;
}

.about_top{
	text-align: right;
	font-size: 80px;
	color: white;
	font-family: Hannari;
}

.about_comment{
	padding-left: 20px;
	text-align: left;
	font-size: 30px;
	font-family: Hannari;
}

.login_phote{
    background-image: url("<%= asset_path('phone.jpg') %>");
    background-size: cover;
    background-repeat: no-repeat;
    background-position: bottom;
    width: 20%;
    height: 200px;
    float: left;
}

.login_top{
    padding-left: 5%;
    font-size: 30px;
    font-family: Hannari;
    float: left;
    text-align: center;
}

.login_comment{
    padding-left: 5%;
    font-size: 25px;
    font-family: Hannari;
    float: left;
}

.sign_up_form{
    width: 40%;
    height: 50px;
    font-size: 20px;
    text-align: center;
    border: 5px solid; border-color: #009900;
    border-top-right-radius: 100px;
    border-bottom-left-radius: 100px;
    float: left;
    padding-top: 5px;
    margin-left: 15%;
    margin-right: 20%;
    color: white;
    background-color: #009900;
}

.shop_info{
    margin-top: 10%;
    float: left;
}

.shop_phote{
    background-image: url("<%= asset_path('car.jpg') %>");
    background-size: cover;
    background-repeat: no-repeat;
    background-position: top left;
    width: 40%;
    height: 300px;
    float: right;
    margin-top: 10%;
}

.item_detail{
    margin-bottom: 350px;
}

.star{
    font-size: 40px;
    margin-left: 40%;
    color: #FFFF66;
}

.star_position{
    font-size: 40px;
    color: #FFFF66;
}

.coupon_comment{
    font-size: 20px;
    color: white;
    margin-top: 10%;
    margin-left: 15%;
    text-align: center;
    width: 70%;
    border: 5px solid; border-color: #663300;
    border-top-right-radius: 70px;
    border-bottom-left-radius: 70px;
    background-color: #663300;
    font-family: Hannari;
}

.coupon_info{
    font-size: 20px;
    text-align: center;
    margin-top: 5%;
    font-family: Hannari;
}

.box{
    width: 25%;
    height: 200px;
    font-size: 35px;
    text-align: center;
    border: 5px solid; border-color: #663300;
    border-top-right-radius: 70px;
    border-bottom-left-radius: 70px;
    float: left;
    padding-top: 75px;
    margin-top: 50px;
    margin-right: 5%;
    color: black;
}

.root_box1{
    color: #005FFF;
}

.root_box2{
    color: #FF4F02;
}

.root_box3{
    color: #FF0461;
}

.root_box4{
    color: #008000;
}

.root_box5{
    color: #FF00FF;
}

.root_box6{
    color: #008080;
}


.font_info{
	font-size: 20px;
}
