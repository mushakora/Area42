<div class="container">
  <div class="row">
  	<h2 style="text-align: center; margin-top: 50px;">弁当詳細</h2>
      <div class="col-xs-4">
  	    <%= attachment_image_tag @item, :image, :fill, 250, 250, fallback: "no_image.jpg" %>
  	  </div>
  	  	<div class="col-xs-8">
          <table class="table">
		    <tr>
			  <th>商品名</th>
	    	  <th><%= @item.name %></th>
	    	</tr>
	    	<tr>
			  <th>商品説明</th>
	    	  <th><%= @item.text %></th>
	    	</tr>
	    	<tr>
			  <th>税込価格</th>
	    	  <th><%= @item.price %>  円</th>
	    	</tr>
	    	<tr>
			  <th>販売ステータス</th>
	    	  <th><%= @item.sale_status %></th>
		    </tr>
	      </table>
	    </div>
	    <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-primary pull-right" %>
  </div>
</div>