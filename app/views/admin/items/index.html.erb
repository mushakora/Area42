<div class="container">
  <div class="row">
  <div class="col-xs-10 col-xs-offset-1">
  <h2 style="text-align: center; margin-top: 50px;">弁当一覧</h2>

  <%= link_to new_admin_item_path do %>
  <i class="fas fa-plus-circle fa-2x" style="float:right;"></i>
  <% end %>

  <table class="table">
	<thead>
		<tr>
			<th></th>
			<th>商品名</th>
			<th>税込価格</th>
			<th>ステータス</th>
		</tr>
	</thead>

	<tbody>
		<% @items.each do |item| %>
		<tr>
			<td><%= attachment_image_tag(item, :image, :fill, 100, 100, fallback: "no_image.jpg") %></td>
			<td><%= link_to item.name, admin_item_path(item.id), :style=>"color:black;" %></td>
            <td><%= item.price %>円</td>
            <td><%= item.sale_status %></td>
		</tr>
		<% end %>
	</tbody>
  </table>
  </div>
  </div>
</div>
