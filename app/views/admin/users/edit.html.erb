<div class="container">
  <div class="row">
    <% if @user.errors.any? %>
    <div id="error-explanation">
      <h2><%= @user.errors.count %> errors prohibited this book from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <h2 style="text-align: center; margin-top: 50px;">会員編集</h2>

    <%= form_for @user, url: admin_user_path(@user) do |f| %>
    <div class="col-xs-10 col-xs-offset-1">
    <table class="table">
        <tr>
          <th><%= f.label :氏名 %></th>
          <th>(姓)<%= f.text_field :first_name %>
          (名)<%= f.text_field :last_name %></th>
        </tr>

        <tr>
          <th><%= f.label :メールアドレス %></th>
          <th><%= f.email_field :email, class: "col-xs-10" %></th>
        </tr>

        <tr>
          <th><%= f.label :"利用予定住所" %></th>
          <th><%= f.select :address,options_for_select([["未選択","未選択"],['六本木', '六本木'], ['銀座', '銀座'],['赤坂','赤坂']]), class: "btn btn-info" %></th>
        </tr>

        <tr>
          <th><%= f.label :誕生日 %></th>
          <th><%= f.date_select :birthday, discard_year: true, use_month_numbers: true, date_separator: '月',prompt: "--" %>日</th>
        </tr>

        <tr>
          <th><%= f.label :メモ %></th>
          <th><%= f.text_area :note, class: "col-xs-10" %></th>
        </tr>
    </table>

        <tr>
          <th><%= f.submit "変更を保存する", class: "btn btn-primary col-xs-offset-5" %></th>
        </tr>
      </div>
    </div>
    <% end %>

  </div>
</div>