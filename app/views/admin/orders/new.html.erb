<div class="container">
  <div class="row">
  <div class="col-xs-10 col-xs-offset-1">
  <h2>発注書作成</h2>

  <table class="table">
	<thead>
		<tr>
			<th>名前</th>
			<th>ジャンル</th>
		</tr>
	</thead>

	<tbody>
    <%= form_for @order, url: admin_orders_path do |f| %>
		  <% @materials.each do |material| %>
		<tr>
            <td><%= material.name %></td>
            <td><%= material.genre %></td>
            <td><%= f.select :material_count,options_for_select((0..10)) %></td>
		</tr>
      <% end %>
    <%= f.submit '発注書作成', class: "btn btn-primary" %>
    <% end %>
	</tbody>
  </table>
  </div>
  </div>
</div>