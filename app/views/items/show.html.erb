<div class="container">
  <div class="row">

  	<h2>商品詳細</h2>

      <div class="col-xs-4">
  	  <%= attachment_image_tag @item, :image, :fill, 250, 250, fallback: "no_image.jpg" %>
  	  </div>

  	  	<div class="col-xs-8">
        <table class="table">
		    <tr>
			  <th>商品名</th>
	    	  <th><%= @item.name %></th>
	    	</tr>
	    	<tr>
			  <th>商品説明</th>
	    	  <th><%= @item.text %></th>
	    	</tr>
	    	<tr>
			  <th>税込価格</th>
	    	  <th><%= @item.price %>円</th>
	    	</tr>
	      </div>
	    </table>
  </div>
</div>
