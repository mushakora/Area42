<div class="container">
  <div class="row">

  	<h2 style="text-align: center; margin-top: 100px;">弁当詳細</h2>

      <div class="col-xs-4">
  	  <%= attachment_image_tag @item, :image, :fill, 250, 250, fallback: "no_image.jpg" %>
  	  </div>
        <div class="item_detail">
  	  	<div class="col-xs-8">
        <table class="table">
		    <tr>
			  <th>商品名</th>
	    	  <th><%= @item.name %></th>
	    	</tr>
	    	<tr>
			  <th>商品説明</th>
	    	  <th><%= @item.text %></th>
	    	</tr>
	    	<tr>
			  <th>税込価格</th>
	    	  <th><%= @item.price %>円</th>
	    	</tr>
	    </table>
              <% if user_signed_in? %>
                <% if @item.favorited_by?(current_user) %>
                  <%= link_to item_favorites_path(item_id: @item), :style=>"text-decoration: none;", method: :delete do  %>
                  <div class="star">
                  <i class="fas fa-star" aria-hidden="true" ></i>
                  <%= @item.favorites.count %>
                  </div>
                  <% end %>
                <% else %>
                  <%= link_to item_favorites_path(item_id: @item), :style=>"text-decoration: none;", method: :post do %>
                  <div class="star">
                  <i class="far fa-star" aria-hidden="true"></i>
                  <%= @item.favorites.count %>
                  </div>
                  <% end %>
                <% end %>
              <% end %>
	    </div>
	    </div>

	    <% unless user_signed_in? %>
	    <p class="login_phote">
        </p>
          <p class="login_top">
          会員登録でよりお得に
          </p>
          <p class="login_comment">
          会員登録いただきますと各種クーポンでの割引や</br>
          お弁当選挙に参加していただけます。
          </p>
          <%= link_to new_user_registration_path do %>
          <div class="sign_up_form">会員登録
          </div>
          <% end %>
        <% end %>
  </div>
</div>
