<div class="container">
  <div class="row">
    <div class="col-xs-10">
      <table class="table">
       <h2>商品一覧(全<%= @items.count %>)件</h2>
       <div class="row">
         <% @items.each do |item| %>
         <% if item.sale_status == '販売中' %>
           <tr>
            <td><%= link_to item_path(item.id) do %>
              <%= attachment_image_tag(item, :image, :fill,80,80,fallback: "no_image.jpg") %>
              <% end %>
            </td>
            <td><%= item.name %></td>
            <td>¥<%= item.price %></td>
          </tr>
        <% end %>
        <% end %>
      </div>
    </table>
    </div>
 </div>
</div>
