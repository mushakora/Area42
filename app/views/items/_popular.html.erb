<% if item.favorited_by?(current_user) %>
  <%= link_to item_favorites_path(item_id: item), :style=>"text-decoration: none;", method: :delete, remote: true do  %>
    <div class="star">
      <i class="fas fa-star" aria-hidden="true" ></i>
      <%= item.favorites.count %>
    </div>
  <% end %>
<% else %>
  <%= link_to item_favorites_path(item_id: item), :style=>"text-decoration: none;", method: :post, remote:true do %>
    <div class="star">
      <i class="far fa-star" aria-hidden="true"></i>
      <%= item.favorites.count %>
    </div>
  <% end %>
<% end %>