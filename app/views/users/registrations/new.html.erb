<div class="container">
  <div class="row">

  <h2 style="text-align: center; margin-top: 100px;">新規登録</h2>

　<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%#= f.error_notification %>

  <div class="col-xs-10 col-xs-offset-1">
    <table class="table">
      <tr>
        <p>名前</p>
        <th><%= f.label :"(姓)" %></th>
        <th><%= f.text_field :first_name, autofocus: true, autocomplete: "name" %></th>
        <th><%= f.label :"(名)" %></th>
        <th><%= f.text_field :last_name, autofocus: true, autocomplete: "name" %></th>
      </tr>

      <tr>
        <th><%= f.label :"メールアドレス" %></th>
        <th><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-xs-10" %></th>
      </tr>

      <tr>
        <th><%= f.label :"誕生日" %></th>
        <th><%= f.date_select :birthday, discard_year: true, use_month_numbers: true, date_separator: '月', prompt: "--" %>日</th>
      </tr>

      <tr>
        <th><%= f.label :"利用予定住所" %>
        <th><%= f.select :address,options_for_select([['六本木', '六本木'], ['銀座', '銀座'],['赤坂','赤坂']]), class: "btn btn-info" %></th>
      </th>

      <tr>
        <th><%= f.label :"パスワード(6文字以上)" %></th>
        <th><%= f.password_field :password, autocomplete: "current-password" %></th>
      </tr>

      <tr>
        <th><%= f.label :"パスワード(確認用)" %></th>
        <th><%= f.password_field :password_confirmation, autocomplete: "new-password" %></th>
      </tr>
    </table>
  </div>

  <div class="form-actions">
    <%= f.submit "新規登録", class: "btn btn-success col-xs-4 col-xs-offset-4" %>
  </div>
<% end %>
　</div>
</div>